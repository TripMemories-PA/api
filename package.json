{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "license": "UNLICENSED",
  "scripts": {
    "docker": "docker compose -p api up -d",
    "start": "node ace build && cp .env build && cp google.json build && node build/bin/server.js",
    "build": "node ace build",
    "dev": "node ace serve --watch",
    "test": "node ace test",
    "import": "curl -X POST -H \"Content-Type:application/x-turtle\" --data-binary @dataset/flux.ttl \"http://localhost:9999/blazegraph/namespace/kb/sparql\"",
    "pm2:dev": "pm2 start \"npm run dev\" --name api_dev",
    "pm2:prod": "pm2 start \"npm run start\" --name api_prod",
    "migrate:fresh": "node ace migration:fresh --seed",
    "lint": "eslint . --ignore-pattern docker/",
    "lint:fix": "eslint . --ignore-pattern docker/ --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit"
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#database/*": "./database/*.js",
    "#start/*": "./start/*.js",
    "#tests/*": "./tests/*.js",
    "#config/*": "./config/*.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.4.0",
    "@adonisjs/eslint-config": "^1.3.0",
    "@adonisjs/prettier-config": "^1.3.0",
    "@adonisjs/tsconfig": "^1.3.0",
    "@japa/api-client": "^2.0.3",
    "@japa/assert": "^3.0.0",
    "@japa/plugin-adonisjs": "^3.0.1",
    "@japa/runner": "^3.1.2",
    "@swc/core": "^1.4.14",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.12.7",
    "eslint": "^8.57.0",
    "pino-pretty": "^11.0.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@adonisjs/auth": "^9.2.0",
    "@adonisjs/core": "^6.6.0",
    "@adonisjs/cors": "^2.2.1",
    "@adonisjs/lucid": "^20.5.1",
    "@google-cloud/vision": "^4.3.0",
    "@vercel/blob": "^0.23.2",
    "@vinejs/vine": "^2.0.0",
    "dayjs": "^1.11.11",
    "luxon": "^3.4.4",
    "minio": "^8.0.0",
    "pg": "^8.11.5",
    "pusher": "^5.2.0",
    "reflect-metadata": "^0.2.2",
    "stripe": "^16.1.0"
  },
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/app"
  },
  "prettier": "@adonisjs/prettier-config"
}
